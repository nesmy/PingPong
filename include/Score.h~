#pragma once
#include "Engine/Object.h"
#include "ResourceManager.h"


class Score : public BB::Object {
 public:
  Score(float x, float y, bool flip){
    Flip = flip;
    BB::ResourceManager::AddObject(this);
    Texture = BB::ResourceManager::LoadTexture("Resources/arts/ScoreBar.png", "ScoreBar");
    Position = Vector2{x,y};
    Scale = 1.0f;
    Rotation = 0.0f;
  }
  ~Score() {}

  void Draw(){
    Rectangle source = {0,0, -(float)Texture.width, (float)Texture.height };
    if(Flip == false){
      DrawTextureEx(Texture, Position, Rotation, Scale, WHITE);
    }else {
    DrawTextureRec(Texture, source, Position, WHITE);
    }
  }
 private:
  bool Flip;
};
