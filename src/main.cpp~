using namespace BB;

int main(void){
  int retVal = EXIT_SUCCESS;
  Pong pong;
  Application<MenuScene> App;

  try{
    App.RunLoop();
  }
  catch(std::runtime_error &e){
    showErrorAndExit(e.what());
    retVal = EXIT_FAILURE;
  }
  
  return retVal;
}
